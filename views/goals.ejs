<%- layout('index') -%>
<%- include partials/nav %>
<div class="col-md-12">
    <form class="form-inline" action="/goal" method="post">
        <div class="form-group">
            <label class="sr-only" for="exampleInputEmail3">Goals</label>
            <input type="text" class="form-control" name="goal" placeholder="Goal">
        </div>
        <input type="hidden" name="name" value="plamen"/>
        <button type="submit" class="btn btn-default">Add Goal</button>
    </form>
</div>

<div class="col-md-12">
<table class="table table-hover">
    <thead>
    <tr>
        <th>#</th>
        <th>Goal</th>

    </tr>
    </thead>
    <tbody>
    <% for(var i = 0; i < goals.length; i++){ %>
    <tr>
        <th scope="row"><%= i %></th>
        <td><a href="/edit/<%= goals[i]._id %>"><%= goals[i].title %></a></td>
    </tr>
    <% } %>
    </tbody>
</table>
    </div>